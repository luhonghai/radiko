<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="@dimen/title_margin"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/title_margin"
        android:paddingRight="@dimen/title_margin">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txtSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:hint="@string/hint_search_channel"
                android:paddingEnd="46dp"
                android:paddingLeft="6dp"
                android:paddingRight="46dp"
                android:paddingStart="6dp"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <ImageView
                android:id="@+id/btCancelSearch"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:contentDescription="no img"
                android:src="@drawable/clear5"
                android:visibility="gone" />
        </RelativeLayout>

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/default_button_color"
            android:text="@string/button_search"
            android:textAppearance="?android:attr/textAppearanceButton"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/labelSelectChannel"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/layout_item_height"
            android:layout_margin="@dimen/title_margin"
            android:background="@color/default_button_color"
            android:gravity="center_horizontal|center_vertical"
            android:padding="6dp"
            android:text="@string/label_recent_channels"
            android:textAppearance="?android:attr/textAppearanceButton"
            android:textColor="@android:color/white"
            android:visibility="visible" />

        <com.gmail.radioserver2.view.slidingtab.SlidingTabLayout
            android:id="@+id/channelTab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_big_size"
            android:layout_marginTop="2dp"
            android:visibility="gone" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/channelContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_horizontal|center_vertical">

        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_channel_ad_unit_id" />
    </RelativeLayout>
</LinearLayout>