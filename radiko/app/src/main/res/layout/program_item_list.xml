<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/programLine"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/table_border_odd_item"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/txtTime"
        style="@style/program_list"
        android:layout_weight="0.35"
        android:gravity="center_horizontal" />

    <View
        android:id="@+id/splitLine"
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="@color/divider_dark_theme"/>

    <TextView
        android:id="@+id/txtProgram"
        style="@style/program_list"
        android:layout_weight="0.65"
        android:gravity="start"
        android:paddingLeft="@dimen/default_top_margin" />
</LinearLayout>